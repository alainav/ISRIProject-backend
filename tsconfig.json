{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // Añade esta línea para incluir tus tipos personalizados
    ],
    "types": [
      "express", // Asegura que los tipos de Express estén disponibles
      "node" // Tipos para Node.js
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts" // Incluye explícitamente tus archivos de definición
  ],
  "exclude": ["node_modules", "dist"]
}
